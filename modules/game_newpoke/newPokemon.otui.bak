UIWindow
  id: newPokemon
  image-source: interface/newpoke.png
  size: 550 500
  anchors.verticalCenter: parent.verticalCenter
  anchors.horizontalCenter: parent.horizontalCenter
  &save: true
  @onEnter: hide()
  @onEscape: hide()

  UIButton
    id: closebutton
    size: 32 32
    image-source: interface/closebutton.png
    anchors.top: parent.top
    anchors.right: parent.right
    margin-top: 6
    margin-right: 6
    @onClick: modules.NewPokemon.hide()

    $hover:
      opacity: 1.0

    $pressed:
      opacity: 1.0

  UIButton
    id: squirtle
    size: 125 125
    image-source: interface/squirtle.png
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 125
    margin-left: 7
    !tooltip: tr('Squirtle, um pokemon do tipo agua com alta defesa e vida.')
    @onClick: modules.NewPokemon.firstpoke('Squirtle')

